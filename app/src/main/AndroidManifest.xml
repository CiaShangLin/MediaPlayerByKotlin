<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shang.mediaplayerbykotlin">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/test">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MP.MediaPlayerService"
            android:exported="false"></service>

        <activity android:name=".Activity.PlayMusicActivity"
            android:theme="@style/test"></activity>

        <receiver
            android:name=".Activity.PlayMusicActivity$MyReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.shang.mediaplayerbykotlin.Activity.START" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.PAUSE" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.RESTART" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.NEXT" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.PREVIOUS" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.MODE" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.LOOPING" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.CURRENT_TIME" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.RESTORE" />
                <action android:name="com.shang.mediaplayerbykotlin.Activity.DATABASE_SUCCCESS" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activity.PlayListActivity"
            android:label="@string/title_activity_play_list"
            android:theme="@style/test"></activity>
    </application>

</manifest>